<link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />

<div class="sharks">

<header>
    <div class="icon"><i class="fa fa-life-ring"></i></div>
    <div class="time">{{ time }}</div>
</header>


<h1>
    {{ shark.name }}
    <div class="gender" title="{{ shark.gender }}"><i class="fa fa-{{ shark.gender_icon }}"></i></div>
</h1>

<img src="images/sharks/{{ shark.image }}.svg" alt="" />
<div class="details species">{{ shark.species }}</div>

<section>

    <div class="stageOfLife">{{ shark.stageOfLife }}</div>

    <div class="weight">{{ shark.weight }}</div>
    <div class="length">{{ shark.length }}</div>

    <div class="description">{{ shark.description }}</div>

    <div id="map"></div>
    <div>{{ shark.distance }}km away</div>

</section>

    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    <script>
        var map = L.map('map').setView([{{ shark.lat }}, {{ shark.lng }}], 1);
        var url = 'https://{s}.tiles.mapbox.com/v4/mapbox.high-contrast/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6IlhHVkZmaW8ifQ.hAMX5hSW-QnTeRCMAy9A8Q&update=i6l38';

        L.tileLayer(url, {
            attribution: ''
        }).addTo(map);

        L.circleMarker([{{ shark.lat }}, {{ shark.lng }}], {
            radius: 5,
            color: 'black',
            fillColor: 'black',
            fillOpacity: 1
        }).addTo(map);

    </script>

</div>
